
{{#if eventFormShowing}}
<div class="createEvent">
  <h2>Post a New Event</h2>
  <form class="createEventForm">
    <div class="form-group">
      <label for="eventName">Event Name</label>
      {{input value=eventName id="eventName"}}
    </div>
    <div class="form-group">
      <label for="date">Event Date</label>
      {{input type=date value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="time">Event Time</label>
      {{input value=time id="time"}}
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      {{input value=location id="location"}}
    </div>
    <div class="form-group">
      <label for="image">Event Photo URL</label>
      {{input value=image id="image"}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>
    <select class="ember-select">
      <label for="price">Price Range</label>
      <option value="cheap">Free-$20</option>
      <option value="medium">$20-$50</option>
      <option value="expensive">$50+</option>
    </select>
    <select class="ember-select">
      <label for="type">Urban or Wild?</label>
      <option value="urban">Urban</option>
      <option value="wild">Wild</option>
    </select>
    <button {{action 'saveEvent'}}>Save Event</button>
  </form>
  <button{{action 'toggleDetail'}}>Nevermind!</button>
</div>
{{else}}
  <div class="createEvent">
    <button id="newEvent" {{action 'toggleDetail'}}>Post a New Event</button>
  </div>
{{/if}}
